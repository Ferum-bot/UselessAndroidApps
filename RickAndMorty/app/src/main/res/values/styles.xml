<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseMarginStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="BaseTextViewStyle" parent="BaseMarginStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/atomic_age</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/autoSizeMinTextSizeTextView</item>
        <item name="autoSizeMaxTextSize">@dimen/autoSizeMaxTextSizeTextView</item>
        <item name="autoSizeStepGranularity">@dimen/autoSizeStepTextView</item>
    </style>

</resources>